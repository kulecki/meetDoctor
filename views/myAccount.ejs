<%- include("header") %>
    <body>
        <%- include("nav") %>
        <div class="main-container">
            <div class="menu">
              <%if(loggedUser.role !== "Admin"){%>
                  <a href="/adminPanel" class="btn">Admin panel</a>
              <%}%>
              <h4 style="color:red"><%=error%></h4>
                <form method="post">
                    <ul class="flex-outer">
                      <li>
                        <label for="first-name">First Name</label>
                        <input type="text" id="first-name" name= "fName" placeholder="Enter your first name here" value=<%=loggedUser.contact.firstName%>>
                      </li>
                      <li>
                        <label for="last-name">Last Name</label>
                        <input type="text" id="last-name" name= "lName" placeholder="Enter your last name here" value=<%=loggedUser.contact.lastName%>>
                      </li>
                      <li>
                        <label for="login">Login</label>
                        <input type="text" name= "login"  id="login" placeholder="Enter your login here" value=<%=loggedUser.login%> required>
                      </li>
                      <li>
                        <label for="email">Email</label>
                        <input type="email" id="email" name= "email" placeholder="Enter your email here" required value=<%=loggedUser.contact.email%>>
                      </li>
                      <li>
                        <label for="phone">Phone</label>
                        <input type="number" min="99999999" max="1000000000" id="phone" name= "phone"  placeholder="Enter your phone number" value=<%=loggedUser.contact.phone%>>
                      </li>
                      <li>
                        <button type="submit">Save changes</button>
                      </li>
                      <li>
                      <%if(loggedUser.role === "Admin"){%>
                        <button onclick=<%deleteFunction%>">Delete</button>
                      </li>
                      <%}%>
                    </ul>
                  </form>
            </div>
        </div>
    </body>
</html>