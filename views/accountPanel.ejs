<%- include("header") %>
    <body>
        <%- include("nav") %>
        <div class="main-container">
            <div class="menu">
              <%if(loggedUser.role === "Patient"){%>
                  <a href="/adminPanel" class="btn">Admin panel</a>
              <%}%>
              <h4 style="color:red"><%=error%></h4>
                <form method="post">
                    <ul class="flex-outer">
                      <li>
                        <label for="first-name">First Name</label>
                        <input type="text" id="first-name" name= "fName" placeholder="Enter your first name here" value=<%=user.contact.firstName%>>
                      </li>
                      <li>
                        <label for="last-name">Last Name</label>
                        <input type="text" id="last-name" name= "lName" placeholder="Enter your last name here" value=<%=user.contact.lastName%>>
                      </li>
                      <li>
                        <label for="login">Login</label>
                        <input type="text" name= "login"  id="login" placeholder="Enter your login here" value=<%=user.login%> required>
                      </li>
                      <li>
                        <label for="password">Password</label>
                        <input type="password" id="password" name= "password" placeholder="Enter your password here"> 
                      </li>
                      <li>
                        <label for="email">Email</label>
                        <input type="email" id="email" name= "email" placeholder="Enter your email here" required value=<%=user.contact.email%>>
                      </li>
                      <li>
                        <label for="phone">Phone</label>
                        <input type="number" min="99999999" max="1000000000" id="phone" name= "phone"  placeholder="Enter your phone here" value=<%=user.contact.phone%>>
                      </li>
                      <li>
                      <label for="phone">Role</label>
                      <select name="role">
                          <option value="Patient" <%=user.role === "Patient" && 'selected' %>>Patient</option>
                          <option value="Doctor" <%=user.role === "Doctor" && 'selected' %>>Doctor</option>
                          <option value="Admin" <%=user.role === "Admin" && 'selected' %>>Admin</option>
                      </select>
                      </li>
                      <li>
                        <button type="submit">Submit</button>
                      </li>
                      <li>
                      <%if(user.role === "Admin"){%>
                        <button onclick=<%deleteFunction%>">Delete</button>
                      </li>
                      <%}%>
                    </ul>
                  </form>
            </div>
        </div>
    </body>
</html>